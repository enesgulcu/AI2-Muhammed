datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  password String
  speeches Speech[] // Kullanıcının konuşma geçmişi
}

model Speech {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String   // Kullanıcının konuşma içeriği
  feedback  String   // ChatGPT tarafından sağlanan geri bildirim
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId // Kullanıcıya referans
}
